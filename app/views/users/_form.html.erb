<%= token_tag nil %>

<p class='form_field input'>
  <p>
    <label for="username">username:</label>
  </p>
  <p>
    <input id="username" class='input-field' type='text' name='user[username]' value="<%= user.username %>">
  </p>
</p>

<p class='form-field input'>
  <p>
    <label for="password">password:</label>
  </p>
  <p>
    <input id="password" class='input-field' type='password' name='user[password]' value="">
  </p>
</p>

<p class='form-field input'>
  <p>
    <label for="again">again:</label>
  </p>
  <p>
    <input id="again" class='input-field' type='password' name='user[password_confirmation]' value=''>
  </p>
</p>

<p class='form-field button'>
  <input class='button' type="submit" value="Continue &rarr;">
</p>